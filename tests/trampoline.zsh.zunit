#!/usr/bin/env zunit

@setup {
  load '../trampoline.plugin.zsh'
}

@test 'plugin version is set' {
  # exercise
  run zt_version
  # verify
  assert "$output" is_not_empty
}

@test 'gawk library is made available' {
  # verify
  assert "$AWKPATH" contains 'HerCerM/zsh-trampoline'
}

@test 'defaults are set for env variables' {
  # verify
  assert "$ZT_DIRECTORY_DECORATOR" is_not_empty
  assert "$ZT_LIST_DIRECTORIES_LOCAL" is_not_empty
  assert "$ZT_KEY_MAP_JUMP_TO_DIRECTORY" is_not_empty
  assert "$ZT_KEY_MAP_TOGGLE_EXPAND" is_not_empty
}
