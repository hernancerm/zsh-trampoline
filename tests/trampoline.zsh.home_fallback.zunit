#!/usr/bin/env zunit

@setup {
  unset XDG_CONFIG_HOME
  load '../trampoline.plugin.zsh'
}

@test 'zt get_configuration_file_path gets main fallback' {
  # exercise
  run zt get_configuration_file_path 'main'
  # verify
  assert $state equals 0
  assert "$output" same_as "$HOME/.config/zt/config.csv"
}

@test 'zt get_configuration_file_path gets local fallback' {
  # exercise
  run zt get_configuration_file_path 'local'
  # verify
  assert $state equals 0
  assert "$output" same_as "$HOME/.config/zt/config_local.csv"
}
