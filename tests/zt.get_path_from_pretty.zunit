#!/usr/bin/env zunit

@setup {
  load '../src/configuration.zsh'
}

@test 'zt get_path_from_pretty gets path on short format' {
  # setup
  local pretty_line='*/tmp/dir'
  # exercise
  run zt get_path_from_pretty <<< "$pretty_line"
  # verify
  assert $state equals 0
  assert "$output" same_as '/tmp/dir'
}

@test 'zt get_path_from_pretty gets path on long format' {
  # setup
  local pretty_line='*/tmp/dir    -- Test directory.'
  # exercise
  run zt get_path_from_pretty <<< "$pretty_line"
  # verify
  assert $state equals 0
  assert "$output" same_as '/tmp/dir'
}
