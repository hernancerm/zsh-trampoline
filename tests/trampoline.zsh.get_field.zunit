#!/usr/bin/env zunit

@setup {
  export ZT_DIRECTORY_DECORATOR='*'
  load '../trampoline.zsh'
}

@test 'zt_get_field_from_raw gets path' {
  # setup
  local raw_line='/tmp/dir, Test directory., true'
  local path_expected='/tmp/dir'
  # exercise
  local path_actual="$(echo "$raw_line" | \
      zt_get_field_from_raw 'path')"
  # verify
  assert "$path_actual" same_as "$path_expected"
}

@test 'zt_get_field_from_raw gets description' {
  # setup
  local raw_line='/tmp/dir, Test directory., true'
  local description_expected='Test directory.'
  # exercise
  local description_actual="$(echo "$raw_line" | \
      zt_get_field_from_raw 'description')"
  # verify
  assert "$description_actual" same_as "$description_expected"
}

